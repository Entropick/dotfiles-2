  name = George Brocklehurst
  email = george@georgebrock.com
  signingkey = B51FFCFB
[gpg]
  program = gpg2
[commit]
  gpgsign = true
[core]
  excludesfile = /Users/georgebrocklehurst/.gitignore
  editor = /usr/bin/vim
[push]
  default = current
[color]
  ui = auto
[alias]
  c-p = cherry-pick
  graph = log --all --graph --decorate --oneline -n30
  rgrep = !git grep
  cb = symbolic-ref HEAD --short
  rb = !git for-each-ref --format='%(upstream:short)' \
       "refs/heads/$(git cb)"
  sb = !ls .git/refs/remotes/*/$(git cb) | cut -d/ -f4,5 | \
       xargs git show-branch $(git cb)
  tig = !tig
[mergetool "vimdiff"]
  cmd = vimdiff -f $LOCAL $MERGED $REMOTE
[merge]
  tool = vimdiff
[diff]
  tool = vimdiff
  guitool = vimdiff
[difftool]
  prompt = false
[mergetool]
  prompt = false
  keepBackup = false
[blame]
  date = short
[help]
  autocorrect = 1
[grep]
  lineNumber = true
  patternType = extended
[fetch]
  prune = true
